// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // Docks & Panels
  "project_panel": {
    "dock": "right",
    "auto_reveal_entries": false,
    "auto_fold_dirs": false,
    "git_status": true,
    "indent_guides": {
      "show":"always"
    }
  },
  "git_panel": {
    "dock": "right"
  },
  "bottom_dock_layout": "contained",
  "collaboration_panel": {
    "dock": "right"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": false
  },
  // Editor
  "vim_mode": true,
  "auto_signature_help": false,
  "gutter": {
    "line_numbers": true
  },
  "relative_line_numbers": true,
  "base_keymap": "VSCode",
  "ensure_final_newline_on_save": true,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  // AI
  "agent": {
    "default_width": 648.0,
    "model_parameters": []
  },
  "disable_ai": true,
  // Appearance
  "buffer_font_family": "Ayuthaya",
  "ui_font_size": 16,
  "buffer_font_size": 15.0,
  "icon_theme": {
    "mode": "dark",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "One Dark - Darkened"
  },
  "preview_tabs": {
    "enabled": false
  },
  "minimap": {
    "show": "never"
  },
  "inlay_hints": {
    "enabled": false
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "show_wrap_guides": true
}
