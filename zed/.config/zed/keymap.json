// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "bindings": {
      "ctrl-e": "workspace::ToggleRightDock",
      "ctrl-/": "workspace::ToggleBottomDock",
      "ctrl-o": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-g": "editor::ShowCompletions"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space p": "editor::Format",
      "space f": "file_finder::Toggle",
      // Panes
      "shift-l": "pane::ActivateNextItem",
      "shift-h": "pane::ActivatePreviousItem",
      "space r": "pane::SplitRight",
      "space v": "workspace::NewFileSplitVertical",
      "space s": "workspace::NewFileSplitHorizontal",
      "space h": "workspace::ActivatePaneLeft",
      "space l": "workspace::ActivatePaneRight",
      "space k": "workspace::ActivatePaneUp",
      "space j": "workspace::ActivatePaneDown",
      // Nice to have
      "space w": "workspace::SaveWithoutFormat",
      "space q": "pane::CloseActiveItem",
      "space w q": ["workspace::SendKeystrokes", "space w space q"]
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "alt-h": "vim::Left",
      "alt-l": "vim::Right",
      "alt-j": "vim::Down",
      "alt-k": "vim::Up",
      "j k": "vim::NormalBefore"
    }
  },
  { // Fix the annoying issue of not being able to skip completion suggestion and go to newline without exiting insert mode 
    "context": "Editor && showing_completions",
    "bindings": {
      "enter": "editor::Newline",
      "escape": "editor::Cancel"
    }
  },
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      "shift-j": "editor::MoveLineDown",
      "shift-k": "editor::MoveLineUp"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      // File Tree
      "n": "project_panel::NewFile",
      "r": "project_panel::Rename",
      "shift-n": "project_panel::NewDirectory",
      "shift-d": "project_panel::Delete"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-/": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  }
]
